<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FlashBuddyCreateUserActivity" >

    <EditText
        android:id="@+id/create_password_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_password_text_1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/create_password_2"
        android:inputType="textPassword"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray" />

    <Button
        android:id="@+id/create_user_button"
        style="@color/bluebutton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_password_text_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:background="@color/bluebutton"
        android:onClick="onClickCreateUser"
        android:text="@string/create_new_account"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/CreateUserBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:fontFamily="@string/log_in_banner"
        android:gravity="center"
        android:text="@string/createuser_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/bluebutton"
        android:textSize="60sp"
        android:textStyle="normal"
        android:typeface="normal" />

    <EditText
        android:id="@+id/create_password_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_password_text_2"
        android:layout_below="@+id/create_username_text"
        android:ems="10"
        android:hint="@string/create_password_1"
        android:inputType="textPassword"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/create_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_password_text_1"
        android:layout_below="@+id/CreateUserBanner"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="@string/newusername"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray" />

</RelativeLayout>