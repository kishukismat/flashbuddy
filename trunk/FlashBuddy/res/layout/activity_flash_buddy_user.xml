<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FlashBuddyUserActivity" >

    <Button
        android:id="@+id/Logout"
        style="@drawable/roundedbutton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@color/red"
        android:onClick="onClickLogout"
        android:text="@string/main_logout"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/current_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Logout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="@string/main_currentusername"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/usernameTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Logout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="@string/main_trueUsername"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/ViewDecks"
        style="@drawable/roundedbutton"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/StartStudying"
        android:layout_centerVertical="true"
        android:background="@color/bluebutton"
        android:onClick="onClickShowDecks"
        android:text="@string/main_view_decks"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/StartStudying"
        style="@drawable/roundedbutton"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_above="@+id/ViewDecks"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@color/green"
        android:onClick="onClickStudy"
        android:text="@string/main_start_studying"
        android:textColor="@color/white" />

</RelativeLayout>
